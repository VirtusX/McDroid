<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="virtusx.androidstudyapplication.MainActivity"
    android:background="@color/material_blue_grey_900">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/TextResource"
        android:textColor="@color/abc_secondary_text_material_dark"
        android:id="@+id/MainText"
        android:layout_gravity="top|center"
        android:layout_alignParentTop="true"
        android:singleLine="false"
        android:phoneNumber="false"
        android:password="false"
        android:nestedScrollingEnabled="true"
        android:enabled="true"
        android:autoText="false"
        android:textIsSelectable="false"
        android:textSize="18sp"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/Start"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/Left"
        tools:ignore="UnknownId" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ButtonText"
        android:id="@+id/Start"
        android:layout_alignParentTop="true"
        android:onClick="SaveClick"
        android:nestedScrollingEnabled="false"
        android:textSize="12sp"
        android:background="@color/material_blue_grey_950"
        android:textColor="@color/abc_secondary_text_material_dark"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="false" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/CookingRest"
        android:textColor="@color/abc_primary_text_material_dark"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textSize="18sp"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/ClientSize"
        android:textColor="@color/abc_primary_text_material_dark"
        android:textSize="18sp"
        android:layout_gravity="right"
        android:width="200dp"
        android:layout_below="@+id/Start"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="120dp"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/CookingSize"
        android:textColor="@android:color/primary_text_dark"
        android:textSize="18sp"
        android:layout_gravity="left"
        android:width="200dp"
        android:layout_below="@+id/ClientSize"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="190dp"
        android:layout_alignParentRight="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Count"
        android:id="@+id/Count"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@color/material_blue_grey_950"
        android:textColor="@color/abc_secondary_text_material_dark"
        android:enabled="false"
        android:visibility="invisible"
        android:onClick="CountClick"
        android:layout_alignParentRight="true" />

</RelativeLayout>
